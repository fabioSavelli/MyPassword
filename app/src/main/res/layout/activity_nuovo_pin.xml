<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.NuovoPinActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent=".50"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/background_view"
        app:layout_constraintHeight_percent=".8"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent=".9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/constraint_layout"
            app:layout_constraintVertical_bias=".5">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/istruzioniNuovoPin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Crea il codice pin"
                    android:gravity="center"
                    android:textColor="@color/edit_text_hint_grey"
                    android:textSize="16sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="12dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/pinImage1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/pin_empty"
                        android:layout_margin="24dp" />
                    <ImageView
                        android:id="@+id/pinImage2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/pin_empty"
                        android:layout_margin="24dp" />
                    <ImageView
                        android:id="@+id/pinImage3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/pin_empty"
                        android:layout_margin="24dp" />
                    <ImageView
                        android:id="@+id/pinImage4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/pin_empty"
                        android:layout_margin="24dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="12dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/bottonePin1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:text="1"
                        android:background="@drawable/button_pin_trasparent_background"
                        android:textColor="@color/my_light_blue"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:onClick="add1"/>

                    <Button
                        android:id="@+id/bottonePin2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:text="2"
                        android:background="@drawable/button_pin_trasparent_background"
                        android:textColor="@color/my_light_blue"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:onClick="add2"/>

                    <Button
                        android:id="@+id/bottonePin3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:text="3"
                        android:background="@drawable/button_pin_trasparent_background"
                        android:textColor="@color/my_light_blue"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:onClick="add3"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="12dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/bottonePin4"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:text="4"
                        android:background="@drawable/button_pin_trasparent_background"
                        android:textColor="@color/my_light_blue"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:onClick="add4"/>

                    <Button
                        android:id="@+id/bottonePin5"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:text="5"
                        android:background="@drawable/button_pin_trasparent_background"
                        android:textColor="@color/my_light_blue"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:onClick="add5"/>

                    <Button
                        android:id="@+id/bottonePin6"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:text="6"
                        android:background="@drawable/button_pin_trasparent_background"
                        android:textColor="@color/my_light_blue"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:onClick="add6"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="12dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/bottonePin7"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:text="7"
                        android:background="@drawable/button_pin_trasparent_background"
                        android:textColor="@color/my_light_blue"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:onClick="add7"/>

                    <Button
                        android:id="@+id/bottonePin8"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:text="8"
                        android:background="@drawable/button_pin_trasparent_background"
                        android:textColor="@color/my_light_blue"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:onClick="add8"/>

                    <Button
                        android:id="@+id/bottonePin9"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:text="9"
                        android:background="@drawable/button_pin_trasparent_background"
                        android:textColor="@color/my_light_blue"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:onClick="add9"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="12dp"
                    android:gravity="center">

                    <ImageButton
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:src="@drawable/ic_baseline_backspace_24"
                        android:background="@drawable/button_pin_trasparent_background"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:onClick="cancella"/>

                    <Button
                        android:id="@+id/bottonePin0"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:text="0"
                        android:background="@drawable/button_pin_trasparent_background"
                        android:textColor="@color/my_light_blue"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:onClick="add0"/>

                    <ImageButton
                        android:id="@+id/bottoneConfermaPin"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:src="@drawable/ic_baseline_check_grey_24"
                        android:background="@drawable/button_pin_trasparent_background"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:onClick="conferma"/>


                </LinearLayout>

            </LinearLayout>

        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/constraint_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias=".5"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_baseline_pin_24" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crea un Codice PIN"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crea un codice PIN per salvare\ne recuperare le tue password"
                android:textColor="@color/grey"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>